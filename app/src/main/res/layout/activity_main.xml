<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9d3ef"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButtonplay"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonShare"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonNext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPrevious"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        app:srcCompat="@drawable/playpeque" />

    <ImageButton
        android:id="@+id/imageButtonPrevious"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonplay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        app:layout_constraintBottom_toTopOf="@id/imageButtonList"
        app:srcCompat="@drawable/anteriorpeque"
        tools:layout_editor_absoluteY="833dp" />

    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonplay"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        app:layout_constraintBottom_toTopOf="@id/imageButtonLyrics"
        app:srcCompat="@drawable/siguientepeque"
        tools:layout_editor_absoluteY="833dp" />

    <ImageView
        android:id="@+id/imageViewCd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textViewArtist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen" />

    <TextView
        android:id="@+id/textViewArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ed Sheeran"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCd" />

    <TextView
        android:id="@+id/textViewSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shape of you"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/seekBarProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArtist" />

    <SeekBar
        android:id="@+id/seekBarProgress"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:max="100"
        android:progress="25"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSong" />

    <TextView
        android:id="@+id/textViewProgressTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageButtonplay"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonplay"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        android:text="01:00"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="749dp" />

    <TextView
        android:id="@+id/textViewFinishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-03:00"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonplay"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButtonplay"
        tools:layout_editor_absoluteX="622dp"
        tools:layout_editor_absoluteY="749dp" />

    <ImageButton
        android:id="@+id/imageButtonList"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonPrevious"
        app:layout_constraintBottom_toTopOf="@id/seekBarVolume"
        app:srcCompat="@drawable/listapeque"
        tools:layout_editor_absoluteY="1084dp" />

    <ImageButton
        android:id="@+id/imageButtonShare"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarVolume"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonLyrics"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonList"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonplay"
        app:srcCompat="@drawable/compartirpeque" />

    <ImageButton
        android:id="@+id/imageButtonLyrics"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonShare"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonNext"
        app:layout_constraintBottom_toTopOf="@id/seekBarVolume"
        app:srcCompat="@drawable/letrapeque"
        tools:layout_editor_absoluteY="979dp" />

    <SeekBar
        android:id="@+id/seekBarVolume"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:max="10"
        android:progress="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/imageViewVolume"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonShare" />

    <ImageView
        android:id="@+id/imageViewVolume"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/seekBarVolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButtonList"
        app:srcCompat="@drawable/volumenpeque"
        tools:layout_editor_absoluteY="1240dp" />

    <ImageButton
        android:id="@+id/imageButtonPause"
        android:layout_width="127dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonShare"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonNext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonPrevious"
        app:layout_constraintTop_toBottomOf="@+id/seekBarProgress"
        app:srcCompat="@drawable/pausepeque"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>